mixin movers-line(color,img,name,subname,change,net,value)
    tr(class="#{color}")
        td.sub-columns.one.hide-for-small
            img.movers-logo(src="#{img}")
        td.sub-columns.five
            p.title-2 #{name}
            p.subtitle-2 #{subname}
        td.sub-columns.two
            p.numbers.has-color
                if color == 'green'
                    img.arrow-small(src="https://images01.iqoption.com/77/9777/static-00493024958822219777.png")
                else
                    img.arrow-small(src="https://images01.iqoption.com/37/3537/static-04283917970792513537.png")
                | #{change}
        td.sub-columns.two.hide-for-small
            p.numbers.has-color #{net}
        td.sub-columns.two.hide-for-small
            p.numbers #{value}


mixin events-line(color,name,date,img,active,actual,forecast,calendar,btn_text,importancy)
    tr(class="#{color}")
        td.sub-columns.two.hide-for-small
            if importancy == '3'
                img.imp-lvl(src="https://images01.iqoption.com/29/9729/static-04288608513166409729.png")
            if importancy == '2'
                img.imp-lvl(src="https://images01.iqoption.com/97/0897/static-04250258193982160897.png")
            if importancy == '1'
                img.imp-lvl(src="https://images01.iqoption.com/73/1473/static-00460986493511401473.png")
        td.sub-columns.four
            p.title-2 #{name}
            table.table100.hide-for-small
                tr
                    td.sub-columns
                        p.subtitle-2.date #{date}
                    td.sub-columns
                        p.subtitle-2
                            img.active-img(src="#{img}")
                            | #{active}
        td.sub-columns.two.hide-for-small
            p.numbers.numbers-actual #{actual}
        td.sub-columns.two.hide-for-small
            p.numbers.has-color #{forecast}
        td.sub-columns.two
            div.wrap-calendar-button
                table.calendar-button
                    tr
                        td
                            a(href="#{calendar}", target="_blank")
                                img.calendar-img(src="https://images01.iqoption.com/61/9361/static-02949984747373199361.png" style="width:9px !important;display: inline !important;padding: 0 3px 0 0 !important")
                                | #{btn_text}


