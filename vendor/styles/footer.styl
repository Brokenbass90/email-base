$footer-bgr = #000b1f
$footer-title = #586178
$footer-border = #394258
$footer-text = #586178

.footer
	//background $footer-bgr
	//background #051142
	padding-top: 50px

.ramka
	border: 1px solid $footer-border
	padding: 15px
	@media screen and (max-width: 600px)
		margin 0 !important
.warning-title
	font-family "Roboto", "Helvetica", "Arial", sans-serif
	font-size 15px
	color $footer-title
	text-decoration none
	line-height 1.3em
	margin 0
	font-weight bold
	text-transform: uppercase
	padding-bottom: 7px
.warning-text
	font-size: 15px;
	color $footer-text
	font-weight: 400
	line-height: 1.3
	@media screen and (max-width: 600px)
		padding: 0 !important
.terms
	padding-top: 25px
	padding-bottom: 20px
.terms
	color: $footer-text
	font-size: 13px;
	font-weight: 400
	&-right
		text-align: right
	@media screen and (max-width: 600px)
		text-align: center !important
	a
		color: $footer-text
		text-decoration: none




