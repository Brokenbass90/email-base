table.button
	width 100%
	overflow hidden
table.button td
	display block
	width auto !important
	text-align center
	background $btn-bgr
	border none !important
	padding 8px 0 12px
	-webkit-border-radius 3px
	-moz-border-radius 3px
	border-radius 4px

table.button td a
	font-weight bold
	text-decoration none
	font-family Roboto, Helvetica, arial, sans-serif
	color $btn-text
	text-align center
	margin 0
	letter-spacing 0.05em
	font-size 17px
	display block
	width 100%
	padding 0
	text-transform: uppercase
	
.wrap-button
	padding 25px 0

@media screen and (max-width: 600px)
	.wrapper-button
		padding-left: 20px !important
		padding-right: 20px !important


@media screen and (max-width: 600px)
	table.buttons.columns.six
		width: 280px !important
		margin: 0 auto !important
	

table.calendar-button
	width 100%
	overflow hidden
table.calendar-button td
	display block
	width auto !important
	text-align center
	background none
	border 1px solid $blue !important
	padding 2px 7px

table.calendar-button td a
	font-weight bold
	text-decoration none
	color $blue
	text-align center
	margin 0
	font-size 10px
	display block
	width 100%
	white-space: nowrap

.calendar-img
	@media screen and (max-width: 600px)
		width: 9px !important
	
.wrap-report-button
	max-width: 240px !important
	padding-bottom: 10px
table.report-button
	width 100%
	overflow hidden
table.report-button td
	display block
	width auto !important
	text-align center
	background none
	border 4px solid $orange !important
	padding 10px 25px
.blue-cta
	table.report-button td
		border 4px solid #3072eb !important

table.report-button td a
	font-weight bold
	text-decoration none
	color #3f3f3f
	text-align center
	margin 0
	font-size 21px
	display block
	width 100%
	padding: 0
	font-weight: 700
	line-height: 27px
