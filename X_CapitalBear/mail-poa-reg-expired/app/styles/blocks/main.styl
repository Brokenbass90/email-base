*
  font-family "Helvetica", "Arial", sans-serif !important

.vam
  vertical-align middle !important

.butt-td
  padding: 0 !important

body
  margin: 0 auto !important
  text-align: center !important

table.body
  background: #F7F7F7

table.row.grey-bg
  background: #F7F7F7

table.row
  background: #ffffff

table.row.footer
  background: #F7F7F7

table.row.header
  background: #481C82 url('https://static.cdnpub.info/files/storage/public/5f/ad/4a6bebbac1a0j5i8d9/grad.png') left top no-repeat
  background-size: cover
  border-radius: 15px

.text-pad-small
  @media screen and (max-width: 600px)
    padding-left: 20px !important
    padding-right: 20px !important

.center
  text-align: center
  margin: 0 auto

.bb
  border-bottom: 2px solid #EAEBEE

.brad-top
  border-top-right-radius 15px !important
  border-top-left-radius 15px !important
  overflow: hidden

.brad-bot
  border-bottom-right-radius 15px !important
  border-bottom-left-radius 15px !important
  overflow: hidden

.nopoint
  cursor: default !important

.logo
  float: none
  max-width 168px
  padding-left: 0
  padding-top: 0
  padding-bottom: 0
  @media screen and (max-width: 600px)
    padding-left: 20px !important

.title
  color: #FF6B68
  font-size: 36px
  line-height: 46px
  font-weight: 700
  font-family: Helvetica !important

.text
  font-family: Helvetica !important
  color #382F44
  font-size 16px
  font-weight 400
  line-height 24px

.text a
  color: #2F56D0
  font-weight: 700
  font-family: Helvetica !important
  text-decoration: underline

.purple-block
  background: #f8f9fb
  border-left: 6px solid #5b358f
  border-radius: 6px
  color: #222327
  font-family: Helvetica !important
  font-size: 16px
  line-height: 26px
  padding: 25px 30px

.list-item
  background: url('https://static.cdnpub.info/files/storage/public/5f/ad/7eafe19dd5j2b1a0f5/dot.png') top 11px left no-repeat
  background-size: 5px
  color: #382f44
  font-family: Helvetica !important
  font-size: 16px
  font-weight: 400
  line-height: 24px
  padding-left: 16px

.small-text
  color: #382F44
  font-size: 12px
  line-height: 20px
  font-weight: 400
  font-family: Helvetica !important

span.red
  color: #481C82
  font-weight: 700
  font-family: Helvetica !important

.big-text
  color: #5B358F
  font-size: 22px
  line-height: 24px
  font-weight: 700
  font-family: Helvetica !important

.center-small
  @media screen and (max-width: 600px)
    text-align: center !important

.button-wrapper
  padding-top: 0
  padding-bottom: 0
  @media screen and (max-width: 600px)
    padding-left: 30px !important
    padding-right: 30px !important

table.medium-button td
  background: #F95550
  border-radius: 5px !important

.butt
  color #ffffff
  font-size 14px !important
  font-weight 700 !important
  border-radius: 5px !important
  text-transform: uppercase
  letter-spacing: 1px !important
  padding: 21px 0 20px !important
  font-family: Helvetica !important

.left-side
  display: inline-block
  width: 60%
  max-width: 280px
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  vertical-align: middle
  @media screen and (max-width: 600px)
    width: 100% !important
    max-width: 100% !important
    display: block !important

.right-side
  display: inline-block
  width: 40%
  padding-left: 20px
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  vertical-align: middle
  @media screen and (max-width: 600px)
    width: 100% !important
    display: block !important
    padding-left: 0 !important
    padding-top: 20px !important

.footer-text
  text-align: left
  color: #7E859A !important
  font-size: 14px
  line-height: 21px
  font-family: Helvetica !important
  padding-bottom: 15px
  font-weight: 400

.terms
  color: #7E859A
  font-weight: 400
  display: inline-block
  text-align: left
  font-family: Helvetica !important
  margin: 0 30px 0 0

table.row.bot-block
  background: #481C82 url('https://static.cdnpub.info/files/storage/public/5f/ad/4a6bc5ed65c0e7i0f4/grad_small.png') left top no-repeat
  background-size: cover
  border-radius: 15px

.block-title
  color: #FFFFFF
  font-size: 20px
